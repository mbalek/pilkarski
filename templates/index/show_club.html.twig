{# informacje o klubie, pilkarze i statystyki z konkrenych round w league#}
{% extends 'base_user.html.twig' %}

{% block body %}


    <div class="my-3 mx-1 row">
        <div class="card col-xs-12 col-md-3 mx-1 p-0">
            <div class="card-header">
                <h5 class="p-1 m-0">{{ club.name }} - Piłkarze</h5>
            </div>
            <div class="card-body p-0">
                {% for footballer in club.footballers %}
                    <div class="border-top text-center p-1"><a href="{{ path("index_footballer_show", { "id": footballer.id , "club":club.id}) }}">{{ footballer.name }} {{ footballer.surname }}</a></div>
                {% endfor %}
            </div>
        </div>

        <div class="card col-xs-12 col-md mx-1 p-0">

            <div class="card-header m-0">
                <h4 class="m-0 p-0">{{ club.name }} - Szczegóły</h4>
            </div>
            <div class="tab-content card-body">

                <div class="tab-pane active" id="clubs" role="tabpanel">


                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label>{{ 'club.fields.name' |trans }}</label>
                        <p>
                            {{ club.name }}
                        </p>
                        <label>{{ 'club.fields.city' |trans }}</label>
                        <p>{{ club.city }}</p>
                        <label>{{ 'club.fields.stadium' |trans }}</label>
                        <p>{{ club.stadium }}</p>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label>{{ 'club.fields.logo' |trans }}</label>
                        <p><img height="100" width="100" src="{{ vich_uploader_asset(club, 'imageFile') }}"></p>
                    </div>

                </div>
            </div>
        </div>
    </div>


    {# statystyki z konkretnych runnd nie mam pomyslu za nic#}
{% endblock %}