                                                            {% endif %}
                                                </span>
                                                    {% endif %}
                                                    {% if game.status == 2 %}
                                                        &nbsp;&nbsp;<span
                                                            class="badge badge-danger text-uppercase">Na Żywo</span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-muted">
                                                    {{ game.gameDateTime|date("d-m-Y h:m") }}
                                                </td>
                                                <td>
                                                    <a href="{{ path('index_game_show', { "id": game.id }) }}"
                                                       class="btn btn-xs btn-primary">Strona meczu</a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <td>Brak meczów</td>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>



                </div>
            </div>
        </div>
    </section>

    <script></script>{% endblock %}
