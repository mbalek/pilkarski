{% extends 'base_admin.html.twig' %}

{% block title %}
    {{ 'club.display.club' |trans }}
{% endblock %}

{% block body %}

    <div class="card-header pills-regular">
        <h2>
            <span class="text-gray">{{ 'club.display.club' |trans }}
                /
            </span>
            <span class="text-primary">{{ club.name }}</span>
        </h2>


        <ul class="nav nav-pills card-header-pills" id="myTab5" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#clubs" role="tab">{{ 'club.display.baseInformation' |trans }}</a>
                <div class="slide"></div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#round" role="tab">{{ 'club.display.footballers' |trans }}</a>
                <div class="slide"></div>
            </li>
        </ul>
    </div>

    <div class="tab-content card-body">

        <div class="tab-pane active" id="clubs" role="tabpanel">


            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label>{{ 'club.fields.name' |trans }}</label>
                <p>
                    {{ club.name }}
                </p>
                <label>{{ 'club.fields.city' |trans }}</label>
                <p>{{ club.city }}</p>
                <label>{{ 'club.fields.stadium' |trans }}</label>
                <p>{{ club.stadium }}</p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label>{{ 'club.fields.logo' |trans }}</label>
                <p><img height="100" width="100" src="{{ vich_uploader_asset(club, 'imageFile') }}"></p>
            </div>

        </div>

        <div class="tab-pane" id="round" role="tabpanel">
            {{ render(controller('App\\Controller\\FootballerController::index' , {'id': club.id , 'league': league.id })) }}
        </div>
    </div>

    <div class="card-footer">
        <p>
            <a href="{{ path('league_show' , {'id':league.id}) }}">
                <button class="btn btn-primary">{{ 'global.backToList'|trans }}</button>
            </a>
        </p>
    </div>

{% endblock %}
