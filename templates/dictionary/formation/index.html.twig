{% block body %}

    <h3 class="card-header">{{ 'formation.display.formation' |trans }}</h3>
    <div class="p-2">
        <a href="{{ path('dictionary_formation_new') }}" class="btn btn-success"><i
                    class="icofont icofont-user-alt-3"></i>{{ 'global.add'|trans }}</a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'formation.fields.name' |trans }}</th>
                <th>{{ 'global.actions.global' |trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for formation in formations %}
                <tr>
                    <td>{{ formation.name }}</td>
                    <td>
                        <button type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle">{{ 'global.actions.actions'|trans }}</button>
                        <div class="dropdown-menu">
                        <a class="dropdown-item waves-effect waves-light"
                           href="{{ path('dictionary_formation_edit', {'id': formation.id}) }}">
                            <button class="btn btn-primary">{{ 'global.actions.edit'|trans }}</button>
                        </a>
                        <a class="dropdown-item waves-effect waves-light">{{ include('dictionary/formation/_delete_form.html.twig') }}</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">{{ 'global.noRecords'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
