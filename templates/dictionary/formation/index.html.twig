{% block body %}
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="basic-tb-hd">
                            <h2>{{ 'formation.display.formation' |trans }}</h2>
                            <p>
                                <a href="{{ path('dictionary_formation_new') }}">
                                    <button class="btn btn-warning btn-block"><i class="icofont icofont-user-alt-3"></i>{{ 'global.add'|trans }}</button></a>
                            </p>
                        </div>
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                <tr>
                                    <th>{{ 'formation.fields.name' |trans }}</th>
                                    <th>{{ 'global.actions.global' |trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for formation in formations %}
                                    <tr>
                                        <td>{{ formation.name }}</td>
                                        <td>
                                            <a class="dropdown-item waves-effect waves-light" href="{{ path('dictionary_formation_edit', {'id': formation.id}) }}">
                                                <button class="btn btn-primary">{{ 'global.actions.edit'|trans }}</button>
                                            </a>
                                            <a class="dropdown-item waves-effect waves-light">{{ include('dictionary/formation/_delete_form.html.twig') }}</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">{{ 'global.noRecords'|trans }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
