{% block body %}

    <div class="p-2">
        <a href="{{ path('dictionary_formation_new') }}" class="btn btn-success">
            <i class="icofont icofont-user-alt-3"></i>
            {{ 'global.add'|trans }}</a>
    </div>


    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>{{ 'formation.fields.name' |trans }}</th>
                    <th>{{ 'global.actions.global' |trans }}</th>
                </tr>
            </thead>
            <tbody>

                {% for formation in formations %}
                    <tr>
                        <td>{{ formation.name }}</td>
                        <td>
                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" type="button">{{ 'global.actions.actions'|trans }}</button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('dictionary_formation_edit', {'id': formation.id}) }}">
                                    {{ 'global.actions.edit'|trans }}
                                </a>
                                {{ include('dictionary/formation/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">{{ 'global.noRecords'|trans }}</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
