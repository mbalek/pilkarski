{% block body %}
    <h3 class="card-header">{{ 'position.display.position' |trans }}</h3>
    <div class="p-2">
        <a href="{{ path('dictionary_position_new') }}" class="btn btn-success"><i
                    class="icofont icofont-user-alt-3"></i>{{ 'global.add'|trans }}</a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'position.fields.name' |trans }}</th>
                <th>{{ 'global.actions.global' |trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for position in positions %}
                <tr>
                    <td>{{ position.name }} <span class="text-primary">({{ position.shortName }})</span></td>
                    <td>
                        <button type="button" data-toggle="dropdown"
                                class="btn btn-primary dropdown-toggle">{{ 'global.actions.actions'|trans }}</button>
                        <div class="dropdown-menu">
                            <a href="{{ path('dictionary_position_edit', {'id': position.id}) }}"
                               class="dropdown-item">{{ 'global.actions.edit'|trans }}</a>
                            {{ include('dictionary/position/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">{{ 'global.noRecords'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
