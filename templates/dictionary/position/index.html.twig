{% block body %}
    
    <div class="bordered">
        <a href="{{ path('dictionary_position_new') }}" class="btn btn-success">{{ 'global.add'|trans }}</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover  table-bordered m-2">
            <thead>
                <tr>
                    <th>{{ 'position.fields.name' |trans }}</th>
                    <th>{{ 'global.actions.global' |trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for position in positions %}
                    <tr>
                        <td>{{ position.name }}
                            <span class="text-primary">({{ position.shortName }})</span>
                        </td>
                        <td>
                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" type="button">{{ 'global.actions.actions'|trans }}</button>
                            <div class="dropdown-menu">
                                <a href="{{ path('dictionary_position_edit', {'id': position.id}) }}" class="dropdown-item">{{ 'global.actions.edit'|trans }}</a>
                                {{ include('dictionary/position/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">{{ 'global.noRecords'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
