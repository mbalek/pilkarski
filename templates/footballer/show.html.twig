{% extends 'base.html.twig' %}

{% block title %}Footballer{% endblock %}

{% block body %}
    <h1>Footballer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ footballer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ footballer.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ footballer.surname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ footballer.birthdate ? footballer.birthdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Goals</th>
                <td>{{ footballer.goals }}</td>
            </tr>
            <tr>
                <th>Assists</th>
                <td>{{ footballer.assists }}</td>
            </tr>
            <tr>
                <th>YellowCards</th>
                <td>{{ footballer.yellowCards }}</td>
            </tr>
            <tr>
                <th>RedCards</th>
                <td>{{ footballer.redCards }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('footballer_index') }}">back to list</a>

    <a href="{{ path('footballer_edit', {'id': footballer.id}) }}">edit</a>

    {{ include('footballer/_delete_form.html.twig') }}
{% endblock %}
