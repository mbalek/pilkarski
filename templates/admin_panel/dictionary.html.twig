{% extends 'base.html.twig' %}

{% block title %}{{ 'global.actions.adminDash' |trans }}{% endblock %}

{% block body %}
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2>{{ 'dictionary.display.dictionary'|trans }}</h2>
                    <ul class="nav nav-tabs md-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#positions" role="tab">{{ 'position.display.position' |trans }}</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#events-type" role="tab">{{ 'eventType.display.eventType' |trans }}</a>
                            <div class="slide"></div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#formations" role="tab">{{ 'formation.display.formation' |trans }}</a>
                            <div class="slide"></div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content card-block">
        <div class="tab-pane active" id="positions" role="tabpanel">
            {{ render(controller('App\\Controller\\Dictionary\\PositionController::index')) }}
        </div>
        <div class="tab-pane" id="events-type" role="tabpanel">
            {{ render(controller('App\\Controller\\Dictionary\\eventsTypeController::index')) }}
        </div>
        <div class="tab-pane" id="formations" role="tabpanel">
            {{ render(controller('App\\Controller\\Dictionary\\FormationController::index' )) }}
        </div>
    </div>
{% endblock %}