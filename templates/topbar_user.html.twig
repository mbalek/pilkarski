<div class="dashboard-header">
    <nav class="navbar navbar-expand-lg bg-white fixed-top">

        {# Navbar brand logo #}
        <a href="{{ path('index') }}" class="navbar-brand text-primary">Pilkarski</a>
        
        {# User name etc. #}
        <div class="collapse navbar-collapse " id="navbarSupportedContent">

            {% if app.user %}
            
            <ul class="navbar-nav ml-auto navbar-right-top">
                <li class="nav-item dropdown nav-user">
                    <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }}
                        {#<img src="assets/images/avatar-1.jpg" alt="" class="user-avatar-md rounded-circle">#}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                        <div class="nav-user-info">
                            <h5 class="mb-0 text-white nav-user-name">{{ app.user.username }}</h5>
                        </div>
                        <!-- w tym linku będą komentarze danego uzytkownika -->
                        <a class="dropdown-item" href=" /logout"><i class="fas fa-user mr-2"></i>{{ 'global.actions.logout' |trans }}</a>
                    </div>
                </li>
            </ul>

            {% else %}

            <ul class="navbar-nav ml-auto navbar-right-top">
                <li class="nav-item dropdown nav-user">
                    <a class="btn btn-sm btn-outline-primary m-1" href="http://pilkarski/login">{{ 'global.actions.login' |trans }}</a>
                    <a class="btn btn-sm btn-outline-secondary m-1" href="http://pilkarski/register">{{ 'global.actions.register' |trans }}</a>
                </li>
            </ul>

            {% endif %}
        </div>


    </nav>
</div>