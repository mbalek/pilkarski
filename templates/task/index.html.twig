{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'task.display.taskList'|trans }}{% endblock %}

{% block body %}
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="basic-tb-hd">
                            <h2>{{ 'task.display.taskList'|trans }}</h2>
                            <div class="p-2">
                            <a href="{{ path('task_new') }}">
                                <button class="btn btn-success"><i class="icofont icofont-user-alt-3"></i>{{ 'global.add'|trans }}</button></a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                <tr>
                                    <th>{{ 'task.fields.title' |trans }}</th>
                                    <th>{{ 'task.fields.finishDate' |trans }}</th>
                                    <th>{{ 'task.fields.assigmentDate' |trans }}</th>
                                    <th>{{ 'task.fields.description' |trans }}</th>
                                    <th>{{ 'global.actions.actions' |trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for task in tasks %}
                                    <tr>
                                        <td>{{ task.title }}</td>
                                        <td>{{ task.finishDate ? task.finishDate|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ task.assigmentDate ? task.assigmentDate|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ task.description }}</td>
                                        <td>
                                            <a href="{{ path('task_edit' , {'id':task.id}) }}">
                                                <button class="btn btn-primary">{{ 'global.actions.edit'|trans }}</button>
                                            </a>
                                            <a >{{ include('task/_delete_form.html.twig') }}</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">{{ 'global.noRecords' |trans }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
