                }, 1000);
                console.log();
            {% endif %}

            {% if game.extentedFirstHalfStart is not null and game.extentedFirstHalfEnd is null %}
            let fromBase = Date.parse('{{ game.extentedFirstHalfStart|date("Y-m-d\\TH:i:sP") }}');
            let now = Date.parse(Date());
            let sec = (now - fromBase) / 1000;
            function pad ( val ) { return val > 9 ? val : "0" + val; }
            let looper = setInterval( function(){
                $("#seconds").html(pad(++sec%60));
                $("#minutes").html(pad(parseInt(sec/60,10)));
            }, 1000);
            console.log();
            {% endif %}

            {% if game.extentedSecondHalfStart is not null and game.extentedSecondHalfEnd is null %}
            let fromBase = Date.parse('{{ game.extentedSecondHalfStart|date("Y-m-d\\TH:i:sP") }}');
            let now = Date.parse(Date());
            let sec = (now - fromBase) / 1000;
            function pad ( val ) { return val > 9 ? val : "0" + val; }
            let looper = setInterval( function(){
                $("#seconds").html(pad(++sec%60));
                $("#minutes").html(pad(parseInt(sec/60,10)));
            }, 1000);
            console.log();
            {% endif %}
        {% endif %}
        });
    </script>
{% endblock %}
